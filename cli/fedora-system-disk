class Vd:
    # virtual device
    # "DG/VD" : "12/12",
    # "TYPE" : "RAID0",
    # "State" : "Optl",
    # "Access" : "RW",
    # "Consist" : "Yes",
    # "Cache" : "RWTD",
    # "Cac" : "-",
    # "sCC" : "ON",
    # "Size" : "7.276 TB",
    # "Name" : ""
    DG_VD = None
    dg = None
    vd = None
    TYPE = None
    State = None
    Access = None
    Consist = None
    Cache = None
    Cac = None
    sCC = None
    Size = None
    Name = None
    control_id = None
    SCSI_NAA_Id = None
    rdisk_list = None

    def __init__(self, vd):
        self.DG_VD = vd["DG/VD"]
        self.dg = self.DG_VD.split("/")[0]
        self.vd = self.DG_VD.split("/")[1]
        self.__dict__.update(vd)


