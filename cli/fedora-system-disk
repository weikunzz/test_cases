class Disk:
    # disk info
    serial_no = ""
    disk_label = ""
    health = ""
    wwn = None
    # not osd:0 ; is osd:1
    is_osd = 0
    osd_id = "None"
    osd_status = "None"
    disk_type = None
    slot = None

    def __init__(self, disk_label):
        self.disk_label = disk_label

    def get_phy_slot(self, sas_list):
        slot = self.slot
        try:
            return int(slot)
        except:
            if not slot.sas:
                return -1
            return slot.get_index(sas_list)

    def get_disk_type(self):
        slot = self.slot
        # raid card, virtual disk
        if self.disk_type:
            return self.disk_type
        # sas card
        elif not slot:
            return "Unknow"
        return slot.drive_type


